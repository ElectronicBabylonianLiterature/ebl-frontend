{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,lib,test,tests,__tests__,bin}/**/*.js": [
        "prettier-standard",
        "standard --fix",
        "git add"
      ],
      "ignore": [
        "**/__snapshots__/*"
      ]
    }
  },
  "scripts": {
    "format": "prettier-standard src/**/*.js",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lighthouse": "node scripts/lighthouse.js"
  },
  "name": "ebl-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "yarn": "^1.5.1",
    "node": "^11.13.0"
  },
  "dependencies": {
    "@sentry/browser": "^5.4.0",
    "auth0-js": "^9.6.0",
    "bluebird": "^3.5.2",
    "citation-js": "^0.4.0",
    "classnames": "^2.2.6",
    "html-to-react": "^1.3.4",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "moment-range": "^4.0.1",
    "query-string": "^6.2.0",
    "react": "^16.8.0",
    "react-ace": "^7.0.1",
    "react-bootstrap": "^1.0.0-beta.9",
    "react-dom": "^16.4.0",
    "react-markdown": "^4.0.3",
    "react-router-bootstrap": "^0.25.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^3.0.1",
    "react-select": "^3.0.4"
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.1",
    "chance": "^1.0.16",
    "eslint-plugin-flowtype": "^3.9.1",
    "factory-girl": "^5.0.2",
    "flow-bin": "^0.100.0",
    "husky": "^2.3.0",
    "jest-date-mock": "^1.0.2",
    "jest-dom": "^3.0.0",
    "jest-fetch-mock": "^2.1.0",
    "lighthouse": "^5.1.0",
    "lint-staged": "^8.1.7",
    "prettier-standard": "^9.1.1",
    "standard": "^12.0.1"
  },
  "resolutions": {
    "@citation-js/plugin-wikidata": "0.4.0-rc.4",
    "@citation-js/plugin-csl": "0.4.0-rc.4"
  },
  "standard": {
    "env": {
      "browser": true,
      "jest": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
